{
  "compilerOptions": {
    "lib": [
      "ES2021",
      "DOM"
    ],
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*",
    "main.ts"
  ]
}